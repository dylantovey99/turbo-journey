# GitHub Codespaces Environment Configuration
# For development in GitHub Codespaces

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration - Use MongoDB Atlas or local MongoDB
MONGODB_URI=${MONGODB_URI:-mongodb://localhost:27017/email-generator}

# Redis Configuration - Use Redis Cloud or local Redis
REDIS_URL=${REDIS_URL:-redis://localhost:6379}

# Missive API Configuration
MISSIVE_API_TOKEN=${MISSIVE_API_TOKEN}
MISSIVE_API_BASE_URL=https://public.missiveapp.com/v1
MISSIVE_WEBHOOK_SECRET=${MISSIVE_WEBHOOK_SECRET}
MISSIVE_DEFAULT_ACCOUNT_ID=${MISSIVE_DEFAULT_ACCOUNT_ID}

# Organization Configuration
ORGANIZATION_DOMAINS=${ORGANIZATION_DOMAINS:-example.com}
ORGANIZATION_NAME=${ORGANIZATION_NAME:-Development Company}

# Claude/Anthropic API Configuration
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=2000
CLAUDE_TEMPERATURE=0.7

# Email Configuration
DEFAULT_FROM_EMAIL=${DEFAULT_FROM_EMAIL:-noreply@example.com}
DEFAULT_FROM_NAME=${DEFAULT_FROM_NAME:-Development Team}

# Rate Limiting Configuration (Development optimized)
SCRAPING_DELAY_MS=1000
MISSIVE_RATE_LIMIT_PER_SECOND=2
CLAUDE_RATE_LIMIT_PER_MINUTE=60

# Security Configuration
JWT_SECRET=${JWT_SECRET:-development-secret-key-change-in-production}
API_KEY_HEADER=x-api-key

# Logging Configuration (Development)
LOG_LEVEL=debug
LOG_MAX_FILES=30

# Codespaces-specific Puppeteer Configuration
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Codespaces-specific Scraping Configuration
SCRAPING_TIMEOUT=30000
SCRAPING_MAX_RETRIES=3
SCRAPING_USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Cloud deployment flag
IS_CLOUD_DEPLOYMENT=false
CLOUD_PLATFORM=codespaces

# Codespaces specific
CODESPACE_NAME=${CODESPACE_NAME}
GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN=${GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}