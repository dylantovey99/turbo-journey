# GitHub Codespaces Development Environment
NODE_ENV=development
PORT=3001

# Database Configuration (Docker Compose services)
MONGODB_URI=mongodb://mongodb:27017/email-generator-dev
REDIS_URL=redis://redis:6379

# Development-specific settings
DEBUG=*
LOG_LEVEL=debug

# Scraping Configuration  
SCRAPING_TIMEOUT=30000
SCRAPING_DELAY=1000

# Puppeteer Configuration for Codespaces
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
DISABLE_PUPPETEER=false

# Optional - Add your API keys for full functionality
# ANTHROPIC_API_KEY=your-key-here
# MISSIVE_API_TOKEN=your-token-here

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Queue Configuration
QUEUE_CONCURRENCY=1
QUEUE_MAX_ATTEMPTS=3

# Cache Configuration
CACHE_TTL=300

# Cloud deployment flags
IS_CLOUD_DEPLOYMENT=false
CLOUD_PLATFORM=codespaces

# Security (development default)
JWT_SECRET=development-jwt-secret-not-for-production

# Build process environment
NODE_OPTIONS=--max-old-space-size=4096