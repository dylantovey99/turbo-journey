# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/email-generator

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Missive API Configuration
MISSIVE_API_TOKEN=missive_pat-your-token-here
MISSIVE_API_BASE_URL=https://public.missiveapp.com/v1
MISSIVE_WEBHOOK_SECRET=your-webhook-secret

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4

# Email Configuration
DEFAULT_FROM_EMAIL=your-email@company.com
DEFAULT_FROM_NAME=Your Company Name

# Rate Limiting
SCRAPING_DELAY_MS=2000
MISSIVE_RATE_LIMIT_PER_SECOND=1
OPENAI_RATE_LIMIT_PER_MINUTE=60

# Security
JWT_SECRET=your-jwt-secret-here
API_KEY_HEADER=x-api-key

# Logging
LOG_LEVEL=info
LOG_MAX_FILES=30