{
  "name": "Personalized Email Generator",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/turbo-journey",
  "shutdownAction": "stopCompose",

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "GitHub.copilot",
        "ms-playwright.playwright",
        "ms-vscode.test-adapter-converter",
        "ms-vscode.vscode-mongodb"
      ],
      "settings": {
        "typescript.preferences.quotestyle": "single",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },

  "forwardPorts": [3001, 27017, 6379],
  "portsAttributes": {
    "3001": {
      "label": "Application",
      "onAutoForward": "notify"
    },
    "27017": {
      "label": "MongoDB"
    },
    "6379": {
      "label": "Redis"
    }
  },

  "postCreateCommand": "npm install && npm run setup:env || echo 'Setup completed with warnings'",
  "postStartCommand": "echo 'Container ready for development'"
}