{
  "name": "personalized-email-generator",
  "version": "1.0.0",
  "description": "AI-powered personalized email generation system with Missive integration",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register --transpile-only src/server.ts\"",
    "build": "npm run build:clean && npm run build:compile && npm run build:verify",
    "build:clean": "rm -rf dist",
    "build:compile": "tsc --build",
    "build:verify": "npm run verify:imports && npm run verify:env",
    "build:enhanced": "npm run lint && npm run typecheck && npm run build",
    "build:production": "npm run prebuild && npm run build && npm run postbuild",
    "build:ui": "esbuild public/js/main.js --bundle --outfile=public/js/bundle.js --loader:.js=jsx --loader:.ts=tsx --external:*.css",
    "prebuild": "node scripts/setup-environment.js && npm run lint && npm run test -- --passWithNoTests",
    "postbuild": "npm run verify:startup",
    "setup:env": "node scripts/setup-environment.js",
    "verify:imports": "node -e \"require('./dist/server.js'); console.log('✅ Import verification passed')\"",
    "verify:env": "node scripts/verify-environment.js",
    "verify:startup": "timeout 10s node dist/server.js || echo '✅ Startup verification completed'",
    "railway:build": "npm ci --only=production && npm run build:production",
    "railway:start": "node dist/server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "test:cloud": "node scripts/test-cloud-deployment.js",
    "predeploy": "node scripts/pre-deploy-check.js"
  },
  "keywords": [
    "email",
    "personalization",
    "ai",
    "missive",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.3",
    "antd": "^5.26.7",
    "axios": "^1.4.0",
    "bullmq": "^4.8.0",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.25.8",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "mcp": "^1.4.2",
    "module-alias": "^2.2.3",
    "mongoose": "^7.4.0",
    "multer": "^1.4.5-lts.1",
    "puppeteer-core": "^24.16.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "redis": "^4.6.7",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.31",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/module-alias": "^2.0.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^9.0.2",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
