{
  "name": "personalized-email-generator",
  "version": "1.0.0",
  "description": "AI-powered personalized email generation system with Missive integration",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register --transpile-only src/server.ts\"",
    "build": "npm run build:clean && npm run build:compile",
    "build:clean": "rm -rf dist",
    "build:compile": "tsc --build",
    "build:ui": "esbuild public/js/main.js --bundle --outfile=public/js/bundle.js --loader:.js=jsx --loader:.ts=tsx --external:*.css",
    "railway:build": "npm ci --only=production && npm run build",
    "railway:start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "email",
    "personalization",
    "ai",
    "missive",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.3",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/ws": "^8.18.1",
    "antd": "^5.26.7",
    "axios": "^1.4.0",
    "bullmq": "^4.8.0",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.25.8",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "mcp": "^1.4.2",
    "mongoose": "^7.4.0",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^21.11.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "redis": "^4.6.7",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.31",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.2",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
