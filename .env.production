# Production Environment Configuration Template
# Copy this to .env and update values for your deployment

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
# MongoDB Atlas format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/email-generator?retryWrites=true&w=majority

# Redis Configuration
# Redis Cloud format: rediss://username:password@host:port
REDIS_URL=rediss://default:your-redis-password@your-redis-host:6380

# Missive API Configuration (Required for email functionality)
MISSIVE_API_TOKEN=missive_pat-your-token-here
MISSIVE_API_BASE_URL=https://public.missiveapp.com/v1
MISSIVE_WEBHOOK_SECRET=your-webhook-secret-here
MISSIVE_DEFAULT_ACCOUNT_ID=your-account-id

# Organization Configuration
ORGANIZATION_DOMAINS=yourdomain.com,example.com
ORGANIZATION_NAME=Your Company Name

# Claude/Anthropic API Configuration (Required for AI functionality)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=2000
CLAUDE_TEMPERATURE=0.7

# Email Configuration
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
DEFAULT_FROM_NAME=Your Company Name

# Rate Limiting Configuration
SCRAPING_DELAY_MS=2000
MISSIVE_RATE_LIMIT_PER_SECOND=1
CLAUDE_RATE_LIMIT_PER_MINUTE=60

# Security Configuration
JWT_SECRET=your-secure-jwt-secret-with-at-least-32-characters
API_KEY_HEADER=x-api-key

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=30

# Puppeteer Configuration for Cloud Deployment
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_SKIP_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Scraping Configuration
SCRAPING_TIMEOUT=30000
SCRAPING_MAX_RETRIES=3
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36